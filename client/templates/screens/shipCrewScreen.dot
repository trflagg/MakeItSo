<div id="nameCrew" class="centerDiv">
    <h2>Captain {{= it.name }},</h2>
    <h2>please name your crew:</h2>
    <center>
        <table>
            <tr>
                <td> <label for="security">Security Chief</label></td>
                <td> <input class='crewInput highlightLabel' id="security", type="text", size=30 placeholder="Warf" autofocus ></td>
                <td>
                  <button type='button' class='crewInput genderButton' data-crew="security" data-gender="female">Female</button>
                  <button class='crewInput genderButton selected' data-crew="security" data-gender="male">Male</button>
                </td>
            </tr>
            <tr>
                <td> <label for="medical">Medical Officer</label></td>
                <td> <input class='crewInput highlightLabel' id="medical", type="text", size=30 placeholder="Crusher"></td>
                <td>
                  <button type='button' class='crewInput genderButton selected' data-crew="medical" data-gender="female">Female</button>
                  <button class='crewInput genderButton' data-crew="medical" data-gender="male">Male</button>
                </td>
            </tr>
            <tr>
                <td> <label for="info">Information Chief</label></td>
                <td> <input class='crewInput highlightLabel' id="info", type="text", size=30 placeholder="Data"></td>
                <td>
                  <button type='button' class='crewInput genderButton' data-crew="info" data-gender="female">Female</button>
                  <button class='crewInput genderButton selected' data-crew="info" data-gender="male">Male</button>
                </td>
            </tr>
            <tr>
                <td> <label for="empat">Empat</label></td>
                <td> <input class='crewInput highlightLabel' id="empat", type="text", size=30 placeholder="Troi"></td>
                <td>
                  <button type='button' class='crewInput genderButton selected' data-crew="empat" data-gender="female">Female</button>
                  <button class='crewInput genderButton' data-crew="empat" data-gender="male">Male</button>
                </td>
            </tr>
            <tr>
                <td> <label for="engineering">Head of Engineering</label></td>
                <td> <input class='crewInput highlightLabel' id="engineering", type="text", size=30 placeholder="LaForge"></td>
                <td>
                  <button type='button' class='crewInput genderButton' data-crew="engineering" data-gender="female">Female</button>
                  <button class='crewInput genderButton selected' data-crew="engineering" data-gender="male">Male</button>
                </td>
            </tr>
            <tr>
                <td> <label for="cultural">Cultural Advisor</label></td>
                <td> <input class='crewInput highlightLabel' id="cultural", type="text", size=30 placeholder="Picard"></td>
                <td>
                  <button type='button' class='crewInput genderButton' data-crew="cultural" data-gender="female">Female</button>
                  <button class='crewInput genderButton selected' data-crew="cultural" data-gender="male">Male</button>
                </td>
            </tr>
            <tr>
                <td> <label for="janitor">Janitor</label></td>
                <td> <input class='crewInput highlightLabel' id="janitor", type="text", size=30 placeholder="Thurgood"></td>
                <td>
                  <button type='button' class='crewInput genderButton' data-crew="janitor" data-gender="female">Female</button>
                  <button class='crewInput genderButton selected' data-crew="janitor" data-gender="male">Male</button>
                </td>
            </tr>
        </table>
        <button id="startGameButton">Start Game</button>
    </center>

    <p id="nameError" class="error"></p>
    <div id="nameInstructions" class="prompt" style="display:none">
        <p>(press Enter to continue)</p>
    </div>
</div>
